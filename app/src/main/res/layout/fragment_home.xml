        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/hg9"
        app:layout_constraintBottom_toTopOf="@+id/hg14"
        app:layout_constraintStart_toEndOf="@id/vg1"
