            android:layout_width="@dimen/ic_size_24dp"
            android:layout_height="@dimen/ic_size_24dp"
            android:background="@drawable/ic_sleep">

        </ImageView>

    </LinearLayout>

    <TextView
        android:id="@+id/home_tv_pto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/hg1"
        app:layout_constraintBottom_toTopOf="@+id/hg2"
        app:layout_constraintStart_toEndOf="@id/vg7"
        app:layout_constraintEnd_toStartOf="@id/vg10"
        android:gravity="center_vertical"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/font_size_12sp">

    </TextView>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/hg2"
        app:layout_constraintBottom_toTopOf="@+id/hg6"
        app:layout_constraintStart_toEndOf="@id/vg0"
        app:layout_constraintEnd_toStartOf="@id/vg10"
        android:layout_marginTop="@dimen/margin_4dp"
        android:layout_marginEnd="@dimen/margin_8dp">

        <lecho.lib.hellocharts.view.ColumnChartView
            android:id="@+id/home_chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_8dp"
            android:layout_marginEnd="@dimen/margin_8dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/home_tv_time"
