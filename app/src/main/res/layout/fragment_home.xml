        <ImageView
            android:layout_width="@dimen/ic_size_24dp"
            android:layout_height="@dimen/ic_size_24dp"
            android:background="@drawable/ic_attention_white">

        </ImageView>

    </LinearLayout>

    <TextView
        android:id="@+id/home_tv_overtime"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/hg1"
        app:layout_constraintBottom_toTopOf="@+id/hg2"
