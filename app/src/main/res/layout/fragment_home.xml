    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/hg0"
        app:layout_constraintBottom_toTopOf="@+id/hg1"
        app:layout_constraintStart_toEndOf="@id/vg0"
        app:layout_constraintEnd_toStartOf="@id/vg2"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/ic_size_24dp"
            android:layout_height="@dimen/ic_size_24dp"
            android:background="@drawable/ic_access_time">

        </ImageView>

    </LinearLayout>

    <TextView
        android:id="@+id/home_tv_progress_time"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/hg0"
        app:layout_constraintBottom_toTopOf="@+id/hg1"
        app:layout_constraintStart_toEndOf="@id/vg2"
        app:layout_constraintEnd_toStartOf="@id/vg4"
        android:gravity="center_vertical"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/font_size_12sp">

    </TextView>

    <ProgressBar
        android:id="@+id/home_progress_time"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/progressbar_hour"
        android:layout_width="0dp"
        android:layout_height="12dp"
        app:layout_constraintTop_toTopOf="@+id/hg0"
        app:layout_constraintBottom_toTopOf="@+id/hg1"
        app:layout_constraintStart_toEndOf="@id/vg4"
        app:layout_constraintEnd_toStartOf="@id/vg10"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:max="200">

    </ProgressBar>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/hg1"
        app:layout_constraintBottom_toTopOf="@+id/hg2"
        app:layout_constraintStart_toEndOf="@id/vg0"
        app:layout_constraintEnd_toStartOf="@id/vg2"
