        app:layout_constraintBottom_toTopOf="@+id/hg9"
        app:layout_constraintStart_toEndOf="@id/vg1"
        app:layout_constraintEnd_toStartOf="@id/vg9"
        android:gravity="center"
        android:text="出勤"
        android:textSize="@dimen/font_size_20sp"
        android:textColor="@color/colorWhite"
        android:visibility="invisible">

    </TextView>


    <ImageView
        android:id="@+id/home_img_under"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_24dp"
        android:layout_marginBottom="@dimen/margin_24dp"
        android:layout_marginStart="@dimen/margin_4dp"
        android:layout_marginEnd="@dimen/margin_4dp"
        app:layout_constraintTop_toTopOf="@+id/hg7"
        app:layout_constraintBottom_toTopOf="@+id/hg9"
        app:layout_constraintStart_toEndOf="@id/vg8"
        app:layout_constraintEnd_toStartOf="@id/vg9"
        android:visibility="visible"
        android:background="@drawable/ic_arrow_down">

    </ImageView>

    <!--退勤ボタン-->
