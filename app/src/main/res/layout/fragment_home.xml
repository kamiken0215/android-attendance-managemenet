        app:layout_constraintTop_toTopOf="@+id/hg9"
        app:layout_constraintBottom_toTopOf="@+id/hg14"
        app:layout_constraintStart_toEndOf="@id/vg5"
        app:layout_constraintEnd_toStartOf="@id/vg9"
        android:layout_marginStart="@dimen/margin_4dp"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:gravity="center"
        android:background="@color/colorDarkModeWhite">

        <Button
            android:id="@+id/home_btn_start"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/button_blue">

        </Button>

    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/ic_size_32dp"
        android:layout_height="@dimen/ic_size_32dp"
        app:layout_constraintTop_toTopOf="@+id/hg9"
        app:layout_constraintBottom_toTopOf="@+id/hg14"
        app:layout_constraintStart_toEndOf="@id/vg5"
        app:layout_constraintEnd_toStartOf="@id/vg9"
        android:layout_marginStart="@dimen/margin_4dp"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:background="@drawable/ic_onwork_blue">

    </ImageView>

    <TextView
        android:id="@+id/home_tv_start"
        android:layout_width="0dp"
        android:layout_height="0dp"
