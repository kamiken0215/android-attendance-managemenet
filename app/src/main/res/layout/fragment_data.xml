<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Presentation.Graph.GraphFragment"
    android:id="@+id/scroll_hours"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2"
                android:gravity="center">

                <TextView
                    android:id="@+id/hour_data_tv_total_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_size_28sp"
                    android:text="20">
                </TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/ic_size_20dp"
                        android:layout_height="@dimen/ic_size_20dp"
                        android:background="@drawable/ic_walking_white">

                    </ImageView>

                    <TextView
                        android:id="@+id/hour_data_tv_hours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_4dp"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/font_size_16sp"
                        android:text="days">

                    </TextView>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2"
                android:gravity="center">

                <TextView
                    android:id="@+id/hour_data_tv_total_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_size_28sp"
                    android:text="160">
                </TextView>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/ic_size_20dp"
                        android:layout_height="@dimen/ic_size_20dp"
                        android:background="@drawable/ic_desk_white">

                    </ImageView>

                    <TextView
                        android:id="@+id/hour_data_tv_days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_4dp"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/font_size_16sp"
                        android:text="hours">

                    </TextView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2"
                android:gravity="center">

                <TextView
                    android:id="@+id/hour_data_tv_total_over_times"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_size_28sp"
                    android:text="20">
                </TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/ic_size_20dp"
                        android:layout_height="@dimen/ic_size_20dp"
                        android:background="@drawable/ic_attention_white">

                    </ImageView>

                    <TextView
                        android:id="@+id/hour_data_tv_over_times"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_4dp"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/font_size_16sp"
                        android:text="over">

                    </TextView>

                </LinearLayout>

            </LinearLayout>

    </LinearLayout>

        <!--区切り線-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_12dp"
            android:layout_marginBottom="@dimen/margin_12dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_4dp"
                android:background="@color/colorOrange">

            </View>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <lecho.lib.hellocharts.view.ColumnChartView
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginStart="@dimen/margin_8dp"
                android:layout_marginEnd="@dimen/margin_8dp"
                />

            <lecho.lib.hellocharts.view.ColumnChartView
                android:id="@+id/chart2"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginStart="@dimen/margin_8dp"
                android:layout_marginEnd="@dimen/margin_8dp"
                android:layout_marginTop="@dimen/margin_8dp"
                />

            <lecho.lib.hellocharts.view.ColumnChartView
                android:id="@+id/chart3"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginStart="@dimen/margin_8dp"
                android:layout_marginEnd="@dimen/margin_8dp"
                android:layout_marginTop="@dimen/margin_8dp"
                />

            <lecho.lib.hellocharts.view.ColumnChartView
                android:id="@+id/chart4"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginStart="@dimen/margin_8dp"
                android:layout_marginEnd="@dimen/margin_8dp"
                android:layout_marginTop="@dimen/margin_8dp"
                />

            <lecho.lib.hellocharts.view.ColumnChartView
                android:id="@+id/chart5"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginStart="@dimen/margin_8dp"
                android:layout_marginEnd="@dimen/margin_8dp"
                android:layout_marginTop="@dimen/margin_8dp"
                />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

