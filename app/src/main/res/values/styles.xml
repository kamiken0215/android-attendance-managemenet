<resources>

    <!-- Base application theme. -->

    <style name="hint_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorDarkOrange</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorRose</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="EditText.Style" parent="Base.Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorDarkOrange</item>
    </style>


    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/colorBlackOrange</item>
        <item name="colorPrimary">@color/colorBlackOrange</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textSize">@dimen/font_size_16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalendarWeeklyNumberStyle">
        <item name="android:textSize">@dimen/font_size_16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorLightGray</item>
    </style>

    <style name="CalendarDateStyle">
        <item name="android:textSize">@dimen/font_size_16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorLightGray</item>
    </style>

    <style name="CalendarWeeklyStyle">
        <item name="android:textSize">@dimen/font_size_16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorLightGray</item>
    </style>

    <style name="SubmitEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/colorDarkOrange</item>
        <item name="colorControlActivated">@color/colorDarkOrange</item>
        <item name="android:textCursorDrawable">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorDarkModeLightGray</item>
    </style>

</resources>
